@model DJRM.Configuration.Model.Task

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <div class="display-label">ObjectType</div>
    <div class="display-field">@(Model.ObjectType == null ? "None" : Model.ObjectType.Name)</div>

    <div class="display-label">IsNew</div>
    <div class="display-field">@Model.IsNew</div>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">CustomerId</div>
    <div class="display-field">@Model.CustomerId</div>

    <div class="display-label">Customer</div>
    <div class="display-field">@(Model.Customer == null ? "None" : Model.Customer.Title)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


