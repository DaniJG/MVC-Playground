@model IEnumerable<DJRM.Configuration.Model.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            ObjectType
        </th>
        <th>
            IsNew
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            CustomerId
        </th>
        <th>
            Customer
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@(item.ObjectType == null ? "None" : item.ObjectType.Name)
        </td>
        <td>
			@item.IsNew
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@item.CustomerId
        </td>
        <td>
			@(item.Customer == null ? "None" : item.Customer.Title)
        </td>
    </tr>
}

</table>


