@model DJRM.Common.Security.Model.PictureModel

@if (!String.IsNullOrEmpty(Model.PictureURL))
{
    <img  class="profilePicture" src="@Model.PictureURL" alt="Me" />
}
else
{
    <a id="GetGravatar" href="http://www.gravatar.com" title="Get your avatar">
        <img class="profilePicture" src="http://www.gravatar.com/avatar.php?gravatar_id=@(Model.HashedEmail)&rating=G" alt="Gravatar" />
    </a>
}

